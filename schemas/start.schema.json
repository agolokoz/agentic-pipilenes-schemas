{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "$defs": {
    "startConfig": {
      "type": "object",
      "properties": {
        "kind": { "const": "start" },
        "initial_state": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["kind"],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "start" },
    "ports": {
      "type": "array",
      "items": { "$ref": "./common.schema.json#/$defs/port" },
      "minItems": 1
    },
    "config": { "$ref": "#/$defs/startConfig" }
  },
  "required": ["id", "type", "ports", "config"],
  "additionalProperties": false
}
