{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "$defs": {
    "agentConfig": {
      "type": "object",
      "properties": {
        "kind": { "const": "agent" },
        "agent_id": { "type": "string" },
        "input_mapping": {
          "$ref": "./common.schema.json#/$defs/inputMapping"
        },
        "output_mapping": {
          "type": "object",
          "properties": {
            "to_state": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "required": ["to_state"],
          "additionalProperties": false
        },
        "model": { "type": "string" },
        "params": {
          "type": "object",
          "additionalProperties": true
        },
        "output_json": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["kind", "agent_id"],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "agent" },
    "ports": {
      "type": "array",
      "items": { "$ref": "./common.schema.json#/$defs/port" }
    },
    "config": { "$ref": "#/$defs/agentConfig" }
  },
  "required": ["id", "type", "ports", "config"],
  "additionalProperties": false
}
