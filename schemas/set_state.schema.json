{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "$defs": {
    "setStateConfig": {
      "type": "object",
      "properties": {
        "kind": { "const": "set_state" },
        "assignments": {
          "type": "array",
          "items": { "$ref": "./common.schema.json#/$defs/namedExpression" }
        }
      },
      "required": ["kind", "assignments"],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "set_state" },
    "ports": {
      "type": "array",
      "items": { "$ref": "./common.schema.json#/$defs/port" }
    },
    "config": { "$ref": "#/$defs/setStateConfig" }
  },
  "required": ["id", "type", "ports", "config"],
  "additionalProperties": false
}
