{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "$defs": {
    "classifierConfig": {
      "type": "object",
      "properties": {
        "kind": { "const": "classifier" },
        "classifier_id": { "type": "string" },
        "input_mapping": {
          "$ref": "./common.schema.json#/$defs/inputMapping"
        }
      },
      "required": ["kind", "classifier_id"],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "classifier" },
    "ports": {
      "type": "array",
      "items": { "$ref": "./common.schema.json#/$defs/port" }
    },
    "config": { "$ref": "#/$defs/classifierConfig" }
  },
  "required": ["id", "type", "ports", "config"],
  "additionalProperties": false
}
