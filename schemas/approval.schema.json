{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "$defs": {
    "approvalConfig": {
      "type": "object",
      "properties": {
        "kind": { "const": "approval" },
        "message": { "type": "string" },
        "variable_mapping": {
          "type": "array",
          "items": { "$ref": "./common.schema.json#/$defs/namedExpression" }
        }
      },
      "required": ["kind"],
      "additionalProperties": false
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "const": "approval" },
    "ports": {
      "type": "array",
      "items": { "$ref": "./common.schema.json#/$defs/port" }
    },
    "config": { "$ref": "#/$defs/approvalConfig" }
  },
  "required": ["id", "type", "ports", "config"],
  "additionalProperties": false
}
